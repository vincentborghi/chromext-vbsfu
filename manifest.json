{
  "manifest_version": 3,
  "name": "Salesforce Case Full View",
  "version": "1.3", // Increment version
  "description": "Displays Salesforce Case details and feed items (Notes via Tab Automation).",
  "permissions": [
    "activeTab",
    "scripting"
    // "offscreen" permission removed as it's no longer needed
  ],
  "host_permissions": [
    "*://*.lightning.force.com/*" // <<< ADD THIS SECTION
  ],
  "background": {
    "service_worker": "background.js" // Should be v9 (Tab Automation)
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.lightning.force.com/lightning/r/Case/*"],
      "js": ["content.js"] // Should be v10 (Fixed Action Name)
    }
  ]
}
